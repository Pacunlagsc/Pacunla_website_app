<div class="row mt-5">
  <div class="col-md-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-9"><i class="fas fa-sign-in-alt"></i><b>Login</b></h1> 
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email"><b>Email</b></label> 
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password"><b>Password</b></label> 
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block"><b>Login</b></button>
      </form>
      <p class="lead mt-4"><b>No Account?</b><a href="/users/register"><b>Register</b></a>
      </p>
    </div>
  </div>
</div>
